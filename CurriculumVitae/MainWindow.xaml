<Window x:Class="CurriculumVitae.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurriculumVitae"
        xmlns:vm="clr-namespace:CurriculumVitae.ViewModels"
        xmlns:view="clr-namespace:CurriculumVitae.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="650" Loaded="Window_Loaded" ResizeMode="CanMinimize"
        Style="{StaticResource DefaultWindowStyle}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:CVViewVM}">
            <view:CVView/>
        </DataTemplate>
    </Window.Resources>
    
    <DockPanel>
        <WrapPanel x:Name="PanelMenu" DockPanel.Dock="Top" Height="Auto">
            <Button x:Name="BtnCreate" Content="Create" Style="{StaticResource DefaultButtonStyle}"/>
            <Button x:Name="BtnEdit" Content="Edit" Style="{StaticResource DefaultButtonStyle}"/>
            <Button x:Name="BtnAbout" Content="About" Style="{StaticResource DefaultButtonStyle}"/>
            <Button x:Name="Exit" Content="Exit" Style="{StaticResource DefaultButtonStyle}"/>
        </WrapPanel>

        <ListBox x:Name="ListCurriculums" DockPanel.Dock="Left" Width="100"
                 ItemsSource="{Binding PersonItems}" Style="{StaticResource DefaultListBoxStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding FirstLastname}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ScrollViewer Height="Auto" Width="544" HorizontalAlignment="Right" MinWidth="500" Style="{StaticResource DefaultScrollViewerStyle}">
            <ContentControl x:Name="ContentControl" Width="Auto" 
                            Content="{Binding CurrentView}"/>
        </ScrollViewer>
    </DockPanel>
</Window>
