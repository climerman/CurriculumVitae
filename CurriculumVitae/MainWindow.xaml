<Window x:Class="CurriculumVitae.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurriculumVitae"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <WrapPanel x:Name="PanelMenu" DockPanel.Dock="Top">
            <Button x:Name="BtnCreate" Content="Create"/>
            <Button x:Name="BtnEdit" Content="Edit"/>
            <Button x:Name="BtnAbout" Content="About"/>
            <Button x:Name="Exit" Content="Exit"/>
        </WrapPanel>

        <ListView x:Name="ListCurriculums" DockPanel.Dock="Left" MinWidth="100">
        </ListView>
        
        <DockPanel x:Name="ChangableContent" DockPanel.Dock="Right" MinWidth="400">
            
        </DockPanel>
    </DockPanel>
</Window>
